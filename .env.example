# ==========================================
#        ОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ (CORE)
# ==========================================

# 1. Режим среды
# True  = TESTING (Использует TEST_BOT_TOKEN, чистит кэш)
# False = STABLE  (Использует основной BOT_TOKEN)
IS_TEST_ENV=True

# 2. Токены Telegram
# Основной (Stable)
BOT_TOKEN=
# Тестовый (Testing)
TEST_BOT_TOKEN=

# 3. Доступ
# Ваш ID (Главный админ)
ADMIN_IDS=

# 4. Технический чат (Storage)
# Чат для хранения файлов, плейсхолдеров и кэширования file_id.
# Бот должен быть администратором.
TECH_CHAT_ID=

# 5. API Ключи
LASTFM_API_URL=http://ws.audioscrobbler.com/2.0/
LASTFM_API_KEY=
LASTFM_SECRET=

# ==========================================
#  TELEGRAM API: LOCAL SERVER (в Docker Compose)
# ==========================================
# ID и Hash из https://my.telegram.org/apps
TELEGRAM_API_ID=
TELEGRAM_API_HASH=

# ==========================================
#  CLOUDFLARED TUNNEL (для OAuth callback)
# ==========================================
# Токен туннеля из Cloudflare Zero Trust Dashboard
CLOUDFLARED_TUNNEL_TOKEN=

# ==========================================
#       OAUTH SETTINGS
# ==========================================
# Публичный URL вашего туннеля (без trailing slash)
PUBLIC_BASE_URL=
OAUTH_HTTP_PORT=8088
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# ==========================================
#       TESTING ENVIRONMENT SETTINGS
# ==========================================
TEST_PUBLIC_BASE_URL=
TEST_OAUTH_HTTP_PORT=8089
TEST_SPOTIFY_CLIENT_ID=
TEST_SPOTIFY_CLIENT_SECRET=

# ==========================================
#       ЛОГИРОВАНИЕ (DISCORD) - опционально
# ==========================================
ENABLE_DISCORD_BOT_LOG=False
DISCORD_BOT_TOKEN=
DISCORD_LOG_THREAD_ID_MAIN=
DISCORD_LOG_THREAD_ID_TEST=
